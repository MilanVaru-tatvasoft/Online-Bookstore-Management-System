@model DataAccess.CustomModels.UserProfile

<style>
    body {
        background-color: #f3f3f3;
        margin: 0;
        padding: 0;
    }

    .main {
    }

    label {
        display: flex;
        margin-bottom: 5px;
        color: #555;
        font-weight: bold;
    }

    .form-floating label {
        padding-left: 15px;
    }



    .form-group {
        margin-bottom: 20px;
    }

    .btn-submit {
        background-color: #007bff;
        border: none;
        color: #fff;
    }

        .btn-submit:hover {
            background-color: #0056b3;
        }

    .btn-reset {
        background-color: #ffc107;
        border: none;
        color: #212529;
    }

        .btn-reset:hover {
            background-color: #d39e00;
        }
</style>


<div class="p-3 main m-5 ">
    <div class="headerdata w-100 d-flex justify-content-between align-items-center">
        <h2 class="text-dark">My Profile</h2>

    </div>

    <form id="UserProfileData">
        <input type="text" asp-for="@Model.UserId" hidden />
        <div class="row">
            <div class="col-12 col-md-6">
                <div class="form-floating my-2">
                    <input type="text" class="form-control" id="floatingInputFirstName" asp-for="FirstName" placeholder="First Name" disabled>
                    <label for="floatingInputFirstName">First Name</label>
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-floating my-2">
                    <input type="text" class="form-control" id="floatingInputLastName" asp-for="LastName" placeholder="Last Name" disabled>
                    <label for="floatingInputLastName">Last Name</label>
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-floating my-2">
                    <input type="date" class="form-control" id="floatingBirthDate" asp-for="@Model.birthdate" placeholder="Birth Date" disabled>
                    <label for="floatingBirthDate">Birth Date</label>
                    <span class="text-danger" asp-validation-for="birthdate"></span>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="my-2">
                    <select id="gender" name="gender" class="form-select" style="height:55px" asp-for="gender" disabled required>
                        <option value="male" selected>Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-floating my-2">
                    <input type="email" class="form-control" id="floatingEmail" asp-for="Email" placeholder="Email Address" disabled>
                    <label for="floatingEmail">Email Address</label>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-floating my-2">
                    <input type="text" class="form-control" id="floatingContact" asp-for="Contact" placeholder="Contact" disabled>
                    <label for="floatingContact">Contact</label>
                    <span class="text-danger" asp-validation-for="Contact"></span>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-floating my-2">
                    <input type="text" class="form-control" id="floatingCity" asp-for="city" placeholder="City" disabled>
                    <label for="floatingCity">City</label>
                    <span class="text-danger" asp-validation-for="city"></span>
                </div>
            </div>
            <div class="col-12">
                <div class="form-floating my-2">
                    <textarea class="form-control" id="floatingAddress" asp-for="Address" placeholder="Address" style="height: 100px;" disabled></textarea>
                    <label for="floatingAddress">Address</label>
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <div class=" ">
                <button class="btn btn-dark px-3 ms-5 mb-2  " onclick="getResetPassword()">
                    Reset password
                </button>
            </div>
            <div class="d-flex gap-2 ">
                <button id="edit" class="btn btn-primary p-2 px-3" onclick="actionEdit()">Edit</button>
                <button class="btn btn-success p-2 px-3" type="submit" style="display: none;" onclick="editUserProfile()">Submit</button>
                <a id="reset" class="btn btn-secondary p-2 px-3" style="display: none;" onclick="GetUserProfile()">cancle</a>
            </div>
        </div>

    </form>


    <div id="resetpassword" class="d-none d-flex flex-column ">
        <form id="resetForm" method="post" class="d-flex">
            <div class="row w-100">
                <div class="col-12 col-md-3">
                    <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Password" required oninput="return Passwordlength()">
                    <span class="text-danger" id="error"></span>
                </div>
                <div class="col-12 col-md-3">
                    <input type="password" asp-for="Password2" class="form-control" id="confirmPassword" placeholder="Confirm Password" required oninput="return comparePassword()">
                    <span class="text-danger" id="error2"></span>
                </div>
                <div class=" col-12 col-md-3 d-flex  gap-2">
                    <button type="submit" class="btn btn-primary" id="submitbtn" onclick="resetpassword()" disabled>Submit</button>
                    <button type="button" class="btn btn-secondary" onclick="GetUserProfile()">Reset</button>
                </div>
            </div>
         
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="UserId" />
        </form>
    </div>

</div>





<!-- Custom JS -->
<script>

    function actionEdit() {
        event.preventDefault();
        // Get the edit button
        const editButton = document.getElementById('edit');

        // Get the submit and reset buttons
        const submitButton = document.querySelector('form button[type="submit"]');
        const resetButton = document.getElementById('reset');

        // Enable all input fields and dropdowns
        const inputFields = document.querySelectorAll('form input, form textarea, form select');
        inputFields.forEach(function (input) {
            input.disabled = false;
        });

        // Show the submit and reset buttons
        submitButton.style.display = 'block';
        resetButton.style.display = 'block';

        // Hide the edit button
        editButton.style.display = 'none';
    }


    function getResetPassword() {
        event.preventDefault();
        $('#resetpassword').toggleClass('d-block d-none');


    }


</script>
