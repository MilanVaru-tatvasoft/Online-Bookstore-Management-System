@model DataAccess.CustomModels.PaymentBillDetails
<style>
    body {
        font-family: Arial, sans-serif;
        padding: 20px;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
    }

    .bill-header,
    .bill-details,
    .bill-summary {
        background-color: #f8f9fa;
        padding: 10px 20px;
        margin-bottom: 20px;
        border-radius: 5px;
        border: 1px solid #ddd;
    }

        .bill-header h2 {
            margin-top: 0;
            margin-bottom: 10px;
            text-align: center;
        }

        .bill-details h3 {
            margin-top: 0;
        }

        .bill-details p {
            margin: 5px 0;
        }

        .bill-summary table {
            width: 100%;
            border-collapse: collapse;
        }

        .bill-summary th,
        .bill-summary td {
            padding: 8px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        .bill-summary th {
            background-color: #f2f2f2;
        }

        .bill-summary tfoot {
            font-weight: bold;
        }
</style>

<div class="container">
    <div class="bill-header">
        <h2>Bookstore Bill</h2>
    </div>
    <div class="bill-details">
        <h4>Billing Details</h4>
        <p><strong>Name:</strong> @Model.Orders.Customername</p>
        <p><strong>Address:</strong> @Model.Orders.Address</p>
        <p><strong>Email:</strong> @Model.Orders.Email</p>
        <p><strong>Phone Number:</strong> @Model.Orders.Phonenumber</p>
        <hr />

        <h3>Your Orders</h3>
        <table class=" table spinner-bordered">
            <thead>
                <tr>
                    <th>Book Title</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in Model.BookList)
                {
                    <tr>
                        <td>@o.Title</td>
                        <td>@o.Author.Name</td>
                        <td>$@o.Price</td>
                        <td>@Model.OrderDetails.FirstOrDefault(x=>x.Orderid == Model.Orders.Orderid && x.Bookid == o.Bookid).Quantity</td>
                        <td>$@Model.OrderDetails.FirstOrDefault(x=>x.Orderid == Model.Orders.Orderid && x.Bookid == o.Bookid).Totalamount</td>
                    </tr>
                }


            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3">Subtotal</td>

                    <td>@Model.TotalBooks</td>
                    <td>$@Model.TotalAmount
                    </td>
                </tr>
                <tr>
                    <td colspan="4">Discount</td>
                    <td>@Model.DiscountPercentage %</td>
                </tr>
                <tr>
                    <td colspan="4">Shipping Charge</td>
                    <td>$@Model.ShippingAmount</td>
                </tr>
                <tr>
                    <td colspan="4">Tax</td>
                    <td>$@Model.Tax</td>
                </tr>
                <tr>
                    <td colspan="3">Gross Total</td>
                    <td>@Model.TotalBooks</td>
                    <td>$@Model.GrossTotal</td>
                </tr>
            </tfoot>
        </table>
    </div>
    <div>
        <h5>Thank You for Shopping!...</h5>
        <h4 class="fw-bolder">BookStore Team</h4>
    </div>
</div>


