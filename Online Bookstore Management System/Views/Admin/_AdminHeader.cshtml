@model DataAccess.CustomModels.Customer_MainPage;
@inject IHttpContextAccessor context

<style>
    .navbar-brand {
        font-size: 1.5rem;
    }

    a {
        cursor: pointer;
    }

    .navbar-nav .nav-link {
        margin-right: 1rem;
        font-weight: 500;
        transition: color 0.3s;
    }

        .navbar-nav .nav-link:hover {
            color: #007bff;
        }

    .dropdown-menu a.dropdown-item {
        transition: background-color 0.3s;
    }

        .dropdown-menu a.dropdown-item:hover {
            background-color: #f8f9fa;
        }

    .form-control:focus {
        box-shadow: none;
        border-color: #007bff;
    }

    .btn-outline-primary {
        color: #007bff;
        border-color: #007bff;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }

    .btn-outline-danger {
        color: #dc3545;
        border-color: #dc3545;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

    .dropdown-menu {
        margin-left: 90%;
    }
</style>
<nav class="navbar navbar-expand-md bg-light shadow-sm">
    <div class="container-fluid">
        <a class="navbar-brand fw-bolder text-primary " href="#">Online BookStore</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <hr class="m-0 d-flex d-md-none " />
            <div class="offcanvas-body d-flex align-items-md-center">
                <ul class="navbar-nav w-100">
                    <li class="nav-item">
                        <a class="nav-link active text-dark" aria-current="page" onclick="AdminDashboard()">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" onclick="AdminBookList()">BookList</a>
                    </li>
                    <li class="nav-item d-flex d-md-none">
                        <a class="nav-link text-dark" onclick="GetAdminProfile()">My Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" onclick="GetCategoryList()">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" onclick="GetOrderList()">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" onclick="GetAuthorsList()">Authors</a>
                    </li>
                    <li class="nav-item d-flex d-md-none">
                        <a class="nav-link text-dark" asp-action="logout" asp-controller="Home">Logout</a>
                    </li>
                </ul>
                <div class="mt-3 w-100 gap-3 d-none d-lg-flex justify-content-end align-items-center">
                    <h5>Welcome <strong>@context.HttpContext.Session.GetString("UserName")</strong></h5>
                    <div class="dropdown overflow-hidden position-static d-none d-md-block">
                        <button class="btn bg-transparent border border-2 rounded-5" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi-person bi text-dark fw-bold"></i>
                        </button>
                        <ul class="dropdown-menu" style="max-width: 300px; overflow-x: auto;">
                            <li><a class="dropdown-item text-dark" href="#">Add Account</a></li>
                            <li>
                                <a class="dropdown-item text-dark" onclick="GetAdminProfile()">My Profile</a>
                            </li>
                            <li><a class="dropdown-item text-dark" asp-action="logout" asp-controller="Home">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>

