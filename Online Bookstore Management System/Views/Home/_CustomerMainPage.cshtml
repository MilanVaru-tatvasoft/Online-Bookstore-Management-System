<script>
    // Number of pages
    const totalPages = 10;

    // Current page
    let currentPage = 1;

    // Function to generate pagination
    function generatePagination() {
        let paginationHTML = '';

        // Previous button
        paginationHTML += `<span class="page btn" onclick="prevPage()">&#171;</span>`;

        // Page numbers
        for (let i = 1; i <= totalPages; i++) {
            if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) {
                paginationHTML += `<span class="page btn ${i === currentPage ? 'active' : ''}" onclick="goToPage(${i})">${i}</span>`;
            } else if (i === currentPage - 2 || i === currentPage + 2) {
                paginationHTML += `<span class="page btn">...</span>`;
            }
        }

        // Next button
        paginationHTML += `<span class="btn page" onclick="nextPage()">&#187;</span>`;

        document.getElementById('pagination').innerHTML = paginationHTML;
    }

    // Function to go to a specific page
    function goToPage(page) {
        currentPage = page;
        generatePagination();
    }

    function nextPage() {
        if (currentPage < totalPages) {
            currentPage++;
            generatePagination();
        }
    }

    function prevPage() {
        if (currentPage > 1) {
            currentPage--;
            generatePagination();
        }
    }

    generatePagination();
</script>
