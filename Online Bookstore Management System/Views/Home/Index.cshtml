@{
    ViewData["Title"] = "Home Page";
}
@model DataAccess.CustomModels.LoginVm;
<style>
    #MainPage2 {
        background-image: url("~/wwwroot/login_bg.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        height: 100%;
        position: fixed;
    }
</style>

<nav class="navbar navbar-expand-lg bg-light shadow-sm ">
    <div class="w-100 d-flex justify-content-between">
        <div>
            <a class="navbar-brand ms-3 fs-3 fw-bolder text-primary" href="#">Online BookStore</a>
        </div>

    </div>
</nav>
<div id="MainPage" class="d-flex w-100  flex-column align-items-center">
    <img src="~/login_bg.jpg" id="MainPage2" class="img-fluid" />
    <h1 class="text-white text-center my-4" style="z-index:1;">
        Welcome to BookStore
    </h1>
    <div class="d-flex justify-content-end w-100 me-2 d-none" id="resetpasssuccessmsg">

        <div class="alert alert-success alert-dismissible" role="alert">
            A simple success alert—check it out!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    <div class="w-75 mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h3 class="text-secondary text-center mb-4 ">
                    Login to Explore
                </h3>
                <div class="card shadow-lg p-4">
                    <div class="card-body">
                        <form id="registrationForm" asp-action="loginPostMethod" asp-controller="Home">
                            <div class="form-group mb-3">
                                <label for="loginemail" class="form-label">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-envelope"></i>
                                    </span>
                                    <input type="email"
                                           class="form-control"
                                           id="loginemail"
                                           asp-for="@Model.loginEmail"
                                           placeholder="Email" required />
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="loginpassword" class="form-label">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input type="password"
                                           class="form-control"
                                           asp-for="@Model.password"
                                           id="loginpassword"
                                           placeholder="Password"
                                           required oninput="return checkPasswordlength()" />
                                </div>
                            </div>
                            <div class="d-flex justify-content-center align-items-center gap-1">
                                <button class="btn btn-primary w-100" type="submit">
                                    Login
                                </button>

                            </div>
                        </form>
                        <p class="mt-3 text-center">
                            Not registered?
                            <a asp-controller="Home" asp-action="getregistrationform" class="text-decoration-none">
                                Create an account
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<script>
    function checkPasswordlength() {
        var password = document.getElementById("loginpassword").value;

        if (password.length < 6) {
            $('#error').text("Password length must be greater than 6!");
            return false;

        } else {
            $('#error').hide();
        }
    }

</script>
<partial name="_ValidationScriptsPartial" />
